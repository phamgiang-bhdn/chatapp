{
  "name": "chat-app-root",
  "version": "1.0.0",
  "description": "Chat Application with Microservices Architecture",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend/api-gateway && npm install && cd ../auth-service && npm install && cd ../user-service && npm install && cd ../chat-service && npm install",
    "install:frontend": "cd frontend && npm install",
    "start": "node scripts/start.js",
    "stop": "docker-compose down",
    "restart": "npm run stop && npm run start",
    "restart:frontend": "docker-compose restart frontend",
    "restart:api-gateway": "docker-compose restart api-gateway",
    "restart:auth": "docker-compose restart auth-service",
    "restart:user": "docker-compose restart user-service",
    "restart:chat": "docker-compose restart chat-service",
    "restart:mysql": "docker-compose restart mysql",
    "restart:backend": "docker-compose restart api-gateway auth-service user-service chat-service",
    "rebuild:frontend": "docker-compose up -d --build frontend",
    "rebuild:api-gateway": "docker-compose up -d --build api-gateway",
    "rebuild:auth": "docker-compose up -d --build auth-service",
    "rebuild:user": "docker-compose up -d --build user-service",
    "rebuild:chat": "docker-compose up -d --build chat-service",
    "logs": "docker-compose logs -f",
    "logs:frontend": "docker-compose logs -f frontend",
    "logs:api-gateway": "docker-compose logs -f api-gateway",
    "logs:auth": "docker-compose logs -f auth-service",
    "logs:user": "docker-compose logs -f user-service",
    "logs:chat": "docker-compose logs -f chat-service",
    "logs:mysql": "docker-compose logs -f mysql",
    "logs:backend": "docker-compose logs -f api-gateway auth-service user-service chat-service",
    "status": "docker-compose ps",
    "migrate": "cd database && npm install && npm run migrate",
    "seed": "node scripts/seed.js",
    "seed:force": "node scripts/seed.js --force"
  },
  "keywords": [
    "chat",
    "microservices",
    "nodejs",
    "react",
    "websocket"
  ],
  "author": "",
  "license": "MIT"
}